---
import FrameworksPills from "./FrameworksPills.astro";

interface Props {
    name: string;
    description: string;
    exampleImg: string;
    frameworks: Object[];
}

const { name, description, exampleImg, frameworks } = Astro.props;
---

<div class="mt-4 ml-10 flex items-center justify-between">
    <div class="w-1/2">
        <h4
            class="text-[#A46D55] font-extrabold text-6xl 2xl:text-8xl min-[2000px]:text-[15rem]"
        >
            {name}
        </h4>
        <p
            class="text-2xl min-[2000px]:text-7xl min-[2000px]:leading-[6rem] font-light text-white/70"
        >
            {description}
        </p>
        <div class="flex items-center gap-4 flex-wrap mt-4">
            {
                frameworks.map( pill => (
                <FrameworksPills
                    frameworkName = { pill.frameworkName }
                    img = { pill.img }
                    color = { pill.color }
                    bgColor = { pill.bgColor }
                />
                ))
            }
        </div>
    </div>
    <img
        src={exampleImg}
        loading="lazy"
        alt={`Example of ${name}`}
        class="pointer-events-none w-1/2"
    />
</div>
