---
import RubikCubeIcon from "./RubikCubeIcon.astro";
---

<div>
    <RubikCubeIcon />
</div>
<div>
    <span class="_background-txt">Developer</span>
    <h1 transition:name="media-player"
        class="font-black text-[9.5vw] leading-none max-w-screen flex flex-col h-screen justify-center pointer-events-none"
    >
        <div class="flex flex-col">
            <span>
                <span>FRONTEND</span>
                <span class="text-black/30 _text-stroke">DEV.</span>
            </span>
            <span>
                <span>UX/UI</span>
                <span class="text-black/30 _text-stroke">HOBBYIST</span>
            </span>
            <span>
                <span class="text-black/30 _text-stroke">FUTURE</span>
                <span>FULLSTACK</span>
            </span>
        </div>
    </h1>
</div>

<style>
    ._text-stroke {
        -webkit-text-stroke: 1px #747474;
    }
    ._background-txt {
        height: 100vh;
        mix-blend-mode: darken;
        text-transform: uppercase;
        position: absolute;
        display: flex;
        align-items: center;
        justify-content: end;
        font-weight: 900;
        font-size: 30vw;
        word-break: break-all;
        width: 100vw;
        text-align: end;
        transform: translateX(-40px);
        line-height: 100%;
        z-index: -1;
        color: #00000050;
    }
</style>
