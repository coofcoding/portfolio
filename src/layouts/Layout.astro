---
// COMPONENTS / IMPORTATIONS

// FONTS
import "@fontsource/lato/100.css";
import "@fontsource/lato/300.css";
import "@fontsource/lato/400.css";
import "@fontsource/lato/700.css";
import "@fontsource/lato/900.css";
import Cursor from "../ui/Cursor.astro";
import "../../node_modules/rolly.js/css/style.css";
import DownArrow from "../../public/DownArrow.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Welcome, this is my personal portfolio where you'll can see some of the projects that i made, the technologies with i frecuently work and some technologies that i didn't still use today."
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body>
        <script>
            import rolly from "rolly.js";

            const r = rolly({
                view: document.querySelector(".app"),
                native: true,
            });
            r.init();
        </script>
        <span
            class="absolute bottom-0 left-[50%] translate-x-[-50%] text-[2vw] font-bold text-white/80 flex items-center gap-2 _scroll-txt-animation pointer-events-none"
        >
            <DownArrow />
            scroll and discover
        </span>
        <div class="app">
            <Cursor />
            <div data-scene>
                <slot />
            </div>
        </div>

        <script src="../scripts/cursor-follower.js"></script>
    </body><!-- GLOBAL STYLES -->
    <style is:global>
        :root {
        }
        ::-webkit-scrollbar {
            display: none;
        }
        html {
            cursor: none;
            font-family: "Lato", sans-serif;
            background: #000000;
            scroll-behavior: smooth;
        }
        [data-scene] {
            background-image: url("./bg&effects/noisee.avif");
        }
        body {
            overflow-x: hidden;
            -ms-overflow-style: none; /* IE and Edge */
            scrollbar-width: none; /* Firefox */
        }
        ::-moz-selection {
            /* Code for Firefox */
            color: rgb(36, 36, 36);
            background: rgb(0, 0, 0);
        }

        ::selection {
            color: rgb(36, 36, 36);
            background: rgb(0, 0, 0);
        }
        #_animationIcon {
            animation: iconAnimate 1s ease-in-out alternate 12;
        }
        @keyframes iconAnimate {
            from {
                transform: translateY(-3px);
            }
            to {
                transform: translateY(3px);
            }
        }
        ._scroll-txt-animation {
            animation:
                scrollAnimate 3s 2s ease-in-out both,
                scrollAnimteHide 1s 8s ease-in-out forwards;
        }

        @keyframes scrollAnimteHide {
            from {
                opacity: 1;
            }
            to {
                opacity: 0;
                display: none;
            }
        }

        @keyframes scrollAnimate {
            0% {
                opacity: 0;
            }

            50% {
                opacity: 0;
            }

            100% {
                opacity: 1;
            }
        }
    </style>
</html>
